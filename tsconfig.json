{
    "compilerOptions": {
        "strict": false,
        "allowJs": true,
        "skipLibCheck": true,
        "jsx": "react",
        "esModuleInterop": true,
        "module": "es6",
        "target": "es5",
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "Node",
        "lib": ["dom", "es5", "scripthost", "es2015.promise"]
    },
    "exclude": [
        "./node_modules",
        "./public",
        "./dist",
        "./.vscode",
        "./.idea",
        "**/*.test.ts",
        "**/*.test.tsx",
        "./jest.config.ts"
    ]
}
